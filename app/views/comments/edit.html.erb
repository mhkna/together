<%= form_tag account_comment_path, method: :put do %>
  <% @comment_group.each_with_index do |comment, i| %>
    <%= fields_for 'comment_group[]', comment do |p| %>
      <div class="field">
        <%= i + 1 %>.
        <%= p.text_field :text, autofocus: true %>
      </div>

    <% end %>
  <% end %>

  <%= link_to 'Back', account_path(@account), id: "leave-round"%>

  <div class="actions on-side">
    <%= submit_tag "Update" %>
  </div>
<% end %>
