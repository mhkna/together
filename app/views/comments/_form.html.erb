<%= form_tag account_comments_path do %>
  <% @comment_group.each_with_index do |comment, i| %>
    <%= fields_for 'comment_group[]', comment do |p| %>
      <div class="field">
        <%= i + 1 %>.
        <%= p.text_field :text, autofocus: true %>
      </div>

    <% end %>
  <% end %>
  <%= link_to 'Restart', account_path(@account), method: :delete, id: "leave-round"%>
  <div class="actions on-side">
    <%= submit_tag "Join Round" %>
  </div>
<% end %>
